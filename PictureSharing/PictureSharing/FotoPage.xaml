<Page
    x:Class="PictureSharing.FotoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PictureSharing"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <StackPanel>
            <StackPanel Padding="20" Orientation="Horizontal">
                <Button x:Name="btnBack" Content="Ga terug" Margin="0 0 0 0" Click="btnBack_Click" Style="{StaticResource NavigationBackButtonNormalStyle}"/>
                <TextBlock Margin="20, 0, 0, 0" Style="{ThemeResource TitleTextBlockStyle}" Text="test"/>
                <!-- {x:Bind Item.Title, Mode=OneWay} -->
            </StackPanel>
            <Image x:Name="image" Height="auto" Width="auto" Source="http://www.bnr.nl/incoming/858460-1511/aap.png/ALTERNATES/i/aap.png" Stretch="Fill"/>
        </StackPanel>

    </Grid>
</Page>
